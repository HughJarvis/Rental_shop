<div class="wrapper">
<header class="main-head"><h1>Vehicles<h1></header>

<aside class="side">
<div class="vehicles">
  <ul>
    <li><a href="/vehicles/available">available</a>
    </li>
    <li><a href="/vehicles/rented">on-hire</a>
    </li>
    <li><a href="/vehicles/new">Add new vehicle</a></li>
  </ul>
</div>
<br>
    <ul>Categories
      <%@categories.each do |category| %>
        <li class="vehicles"><a href="/vehicles/filter/<%=category.to_s%>"><%=category%></a></li>
        <%end%>
    </ul>
</aside>



<div class="content">
  <% @vehicles.each do |vehicle| %>

    <div>
      <img src="/images/<%=vehicle.image%>" alt="Photo of <%=vehicle.name%>"><br>
    </div>


      <h3><%= vehicle.name %></h3>

          <% if vehicle.on_hire == 'false' %>
          <a href="/vehicles/<%=vehicle.id%>">Show <%=vehicle.name%> details</a><br>
          <a href="/vehicles/<%=vehicle.id%>/rent">Rent <%=vehicle.name%></a><br>

          <%else%>
          <a href="/vehicles/<%=vehicle.id%>">Show <%=vehicle.name%> details</a><br>

      <form class="" action="/vehicles/<%=vehicle.id%>/check-in" method="post">
        <input type="submit" name="" value="Check-in <%=vehicle.name%>">
      </form>
<br>
          <%end%>
        <hr class="vehicles">
          <%end%>

</div>
