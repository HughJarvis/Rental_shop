<h1>Edit vehicle details</h1>

<img src="images/<%=@vehicle.image%>" alt="Photo of <%=@vehicle.name%>">

<form action="/vehicles/<%=@vehicle.id%>" method="post">

  <label for="name">Name</label>
  <input type="text" id="name" name="name" value="<%=@vehicle.name%>">
  <br>
  <label for="category">Category</label>
  <input type="text" id= "category" name="category" value="<%=@vehicle.category%>">
  <br>

<input type="submit" value="Update vehicle details">

</form>
